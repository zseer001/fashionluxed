---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

export async function getStaticPaths() {
    return [
        {
            params: { slug: 'classic-handbag' },
            props: {
                product: {
                    title: 'Classic Designer Handbag',
                    description: 'A timeless piece crafted with premium materials and exquisite attention to detail.',
                    price: '$299.99',
                    features: [
                        'Premium leather construction',
                        'Spacious interior with multiple compartments',
                        'Adjustable shoulder strap',
                        'Signature hardware details',
                        'Lined interior with logo print'
                    ],
                    images: [
                        '/images/products/handbag-1.jpg',
                        '/images/products/handbag-2.jpg',
                        '/images/products/handbag-3.jpg'
                    ],
                    category: 'Designer Handbags',
                    specifications: {
                        dimensions: '12" x 9" x 4"',
                        material: 'Genuine leather',
                        color: 'Black',
                        style: 'Classic'
                    }
                }
            }
        }
    ];
}

const { product } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead 
            title={`${product.title} - Luxury Fashion Collection`}
            description={product.description}
        />
        <meta name="keywords" content={`${product.title}, ${product.category}, luxury fashion, designer handbag, premium quality`} />
    </head>
    <body>
        <Header />
        <main>
            <article class="product-detail">
                <div class="product-gallery">
                    {product.images.map((image, index) => (
                        <div class="gallery-item">
                            <img src={image} alt={`${product.title} - View ${index + 1}`} />
                        </div>
                    ))}
                </div>

                <div class="product-info">
                    <h1>{product.title}</h1>
                    <p class="category">{product.category}</p>
                    <p class="price">{product.price}</p>
                    <p class="description">{product.description}</p>

                    <div class="features">
                        <h2>Key Features</h2>
                        <ul>
                            {product.features.map(feature => (
                                <li>{feature}</li>
                            ))}
                        </ul>
                    </div>

                    <div class="specifications">
                        <h2>Specifications</h2>
                        <dl>
                            {Object.entries(product.specifications).map(([key, value]) => (
                                <>
                                    <dt>{key.charAt(0).toUpperCase() + key.slice(1)}</dt>
                                    <dd>{value}</dd>
                                </>
                            ))}
                        </dl>
                    </div>

                    <div class="contact-section">
                        <h2>Interested in this item?</h2>
                        <p>Contact us for more information and availability</p>
                        <a href="https://wa.me/19088661058" class="whatsapp-button">
                            Contact via WhatsApp
                        </a>
                    </div>
                </div>
            </article>
        </main>
        <Footer />
    </body>
</html>

<style>
    .product-detail {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 1rem;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
    }

    .product-gallery {
        display: grid;
        gap: 1rem;
    }

    .gallery-item {
        aspect-ratio: 1;
        overflow: hidden;
        border-radius: 8px;
    }

    .gallery-item img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .product-info {
        padding: 1rem;
    }

    .product-info h1 {
        font-size: 2rem;
        margin: 0 0 0.5rem 0;
        color: #333;
    }

    .category {
        color: #666;
        font-size: 1.1rem;
        margin-bottom: 1rem;
    }

    .price {
        font-size: 1.5rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 1.5rem;
    }

    .description {
        color: #444;
        line-height: 1.6;
        margin-bottom: 2rem;
    }

    .features, .specifications {
        margin-bottom: 2rem;
    }

    .features h2, .specifications h2 {
        font-size: 1.5rem;
        margin-bottom: 1rem;
        color: #333;
    }

    .features ul {
        list-style: none;
        padding: 0;
    }

    .features li {
        padding: 0.5rem 0;
        color: #444;
        position: relative;
        padding-left: 1.5rem;
    }

    .features li::before {
        content: "â€¢";
        color: #666;
        position: absolute;
        left: 0;
    }

    .specifications dl {
        display: grid;
        grid-template-columns: auto 1fr;
        gap: 0.5rem 1rem;
    }

    .specifications dt {
        font-weight: bold;
        color: #333;
    }

    .specifications dd {
        margin: 0;
        color: #444;
    }

    .contact-section {
        background: #f8f9fa;
        padding: 2rem;
        border-radius: 8px;
        text-align: center;
    }

    .contact-section h2 {
        margin: 0 0 1rem 0;
        color: #333;
    }

    .contact-section p {
        color: #666;
        margin-bottom: 1.5rem;
    }

    .whatsapp-button {
        display: inline-block;
        padding: 1rem 2rem;
        background: #25D366;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        transition: background 0.3s ease;
    }

    .whatsapp-button:hover {
        background: #128C7E;
    }

    @media (max-width: 768px) {
        .product-detail {
            grid-template-columns: 1fr;
        }
    }
</style> 